{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "Scripts/**/*.ts",
    "Scripts/**/*.d.ts",
    "Scripts/**/*.tsx",
    "Scripts/**/*.vue",
    "Scripts/VueComponents/AdminEvent/AdminEventApp.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
