{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "@styles/*": ["./Styles/*"],
      "@scripts/*": ["./Scripts/*"],
      "@components/*": ["./Scripts/VueComponents/*"],
      "@utils/*": ["./Scripts/utils/*"],
      "@services/*": ["./Scripts/services/*"]
    }
  },
  "include": [
    "Scripts/**/*.ts",
    "Scripts/**/*.d.ts",
    "Scripts/**/*.tsx",
    "Scripts/**/*.vue",
    "Scripts/VueComponents/AdminEvent/AdminEventApp.vue",
    "vite.config.ts",
    "vite.utils.ts"
  ]
}
